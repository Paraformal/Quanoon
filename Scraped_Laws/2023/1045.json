{
  "url": "http://77.42.251.205/LawView.aspx?opt=view&LawID=328824",
  "title": "تأسيس جمعية بإسم: «ليالي لبنان الإجتماعية الخيرية» مركزها: الشياح ـ قضاء بعبدا",
  "metadata": {
    "type": "تعريف النص: علم وخبر",
    "number": "1045",
    "date": " 16/08/2023",
    "oj_number": "38",
    "oj_publish_date": "14/09/2023",
    "oj_page": "3259-3260"
  },
  "preamble": "ان\nوزير الداخلية والبلديات،\nبناء على الـمرسوم رقم 8376 تاريخ 10/9/2021,\nبناء على قانون الجمعيات الصادر في 3 آب 1909 ولا سيما الـمادة\nالسادسة منه,\nبناء على الـتـعـمـيـم رقــم 10/إم/2006 تــاريــخ 19/5/2006\nوتـعـديـلـه رقـم 15/إم/2008 تاريخ 12/9/2008 والـتـعـمـيـم رقــم 24/إم/2018\nتاريخ 8/11/2018,\nبناء على الإعلام الـمقدم الى وزارة الداخلية والبلديات من مؤسسي\nالجمعية الـمسماة\n:\n\"\nليالي لبنان الإجتماعية الخيرية» والـمسجل لدى الـمديرية\nالإداريـة الـمشـتركة بـرقـم 6045 تـاريـخ 12/4/2022,\nبناء على اقتراح مدير عام الشؤون السياسية واللاجئين,\nيقرر ما يأتي:",
  "articles": [
    {
      "number": "4 يبلغ هذا العلـم والخبر حيث تدعو الحاجة.",
      "content": [
        {
          "type": "text",
          "data": "أخذت وزارة الداخلية"
        },
        {
          "type": "text",
          "data": "والبلديات علـما بتأسيس الجمعية الـمسماة"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "\""
        },
        {
          "type": "text",
          "data": "ليالي لبنان الإجتماعية الخيرية"
        },
        {
          "type": "text",
          "data": "\""
        },
        {
          "type": "text",
          "data": "مركزها: الشياح ــ حي الأمريكان ــ منطقة الشياح العقارية"
        },
        {
          "type": "text",
          "data": "ــ العقار رقم 771 ــ القسم رقم 9 ــ بناية جاد ــ قضاء بعبدا"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "غايتها: ـ إن الغاية من تأسيس الجمعية، هي تحقيق أهداف خيرية"
        },
        {
          "type": "text",
          "data": "سامية كالآتي"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "أولا: العمل على رفع مستوى الـمجتمع والأفراد بجميع الوسائل"
        },
        {
          "type": "text",
          "data": "الـممكنة غير مساعدة الفقراء والـمحتاجين والـمشردين والـمساكين"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ثانيا: مساعدة ذوي الإحتياجات الخاصة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ثالثا: مساعدة الأرامل ماديا ومعنويا وإجتماعيا وصحيا وتربويا"
        },
        {
          "type": "text",
          "data": "وثقافيا"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "رابعا: التكفل بالأيتام وبالذين يعانون أمراض أي كان نوعها"
        },
        {
          "type": "text",
          "data": "أو نسبتها"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "خامسا: تأمين الأدوية للأمراض العادية والـمزمنة لـمن هم"
        },
        {
          "type": "text",
          "data": "بحاجة اليها وغير قادين على تأمينها"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "سادسا: العمل على رفع الـمستوى الثقافي عبر إقامة ندوات"
        },
        {
          "type": "text",
          "data": "ولقاءات حول التوعية الصحية والـمجتمعية والتنسيق مع كافة الجمعيات الحكومية"
        },
        {
          "type": "text",
          "data": "والغير حكومية لتحقيق ذلك"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "على أن تطبق البنود الـمذكورة أعلاه وفقا للقوانين والأنظمة"
        },
        {
          "type": "text",
          "data": "الـمرعية وبعد موافقة الـمراجع الـمختصة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "الـمؤسسون السادة"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "ليالي نجيب حسن"
        },
        {
          "type": "text",
          "data": "زينا فؤاد السوقي"
        },
        {
          "type": "text",
          "data": "احمد لقمان جمال"
        },
        {
          "type": "text",
          "data": "سناء عبدالله اسماعيل"
        },
        {
          "type": "text",
          "data": "آيه سمير علويه"
        },
        {
          "type": "text",
          "data": "ديانا نجيب حسن"
        },
        {
          "type": "text",
          "data": "راغده محمد مشيك"
        },
        {
          "type": "text",
          "data": "عبد الكريم محمد اسماعيل"
        },
        {
          "type": "text",
          "data": "فرح قاسم الحاج"
        },
        {
          "type": "text",
          "data": "نيرمين سمير قدور"
        },
        {
          "type": "text",
          "data": "زينه رفيق مشيك"
        },
        {
          "type": "text",
          "data": "لورين سمير قدور"
        },
        {
          "type": "text",
          "data": "مصطفى عبد الكريم عجمي"
        },
        {
          "type": "text",
          "data": "ممثل الجمعية تجاه الحكومة: السيد مصطفى عبد الكريم عجمي"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "1",
      "content": [
        {
          "type": "text",
          "data": "على الهيئة التأسيسية استكمال اجراءات"
        },
        {
          "type": "text",
          "data": "تأسيس الجمعية والدعوة الى انتخاب هيئة ادارية خلال مهلة سنة من تاريخ نشر\nالعلـم والخبر في الجريدة الرسمية"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "2",
      "content": [
        {
          "type": "text",
          "data": "ــ على الجمعية الـمشار اليها أن تتقدم"
        },
        {
          "type": "text",
          "data": "من وزارة الداخلية والبلديات في الشهر الأول من كل سنة بلائحة تتضمن أسماء"
        },
        {
          "type": "text",
          "data": "أعضائها وبنسخة من موازنتها السنوية ومن حسابها القطعي السابق وإلا تعرضت"
        },
        {
          "type": "text",
          "data": "لتطبيق أحكام القانون الـمنشور بالـمرسوم رقم 10830 تاريخ 9/10/1962 وتعديلاته"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ــ على الجمعية أن تقوم بالتسجيل لدى وزارة الـمالية ــ الوحدة"
        },
        {
          "type": "text",
          "data": "الضريبية الـمختصة (دائرة ضريبة الدخل في بيروت والـمصالح الـمالية الاقليمية\nفي الـمحافظات) وفقا للنموذج الـمُعدّ من قبل وزارة الـمالية خلال مهلة شهرين\nمن تاريخ صدور بيان العلـم والخبر وفقا لأحكام قانون الاجراءات الضريبية\nرقم 44 تاريخ 11/11/2008 وتعديلاته"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "3",
      "content": [
        {
          "type": "text",
          "data": "يبلغ هذا العلـم والخبر حيث تدعو الحاجة"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    }
  ],
  "signature": "بيروت في 16 آب 2023\nوزير الداخلية والبلديات\nبسام مولوي"
}