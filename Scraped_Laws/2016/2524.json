  "articles": [
    {
      "number": "4 يبلغ هذا العلم والخبر حيث تدعو الحاجة.",
      "content": [
        {
          "type": "text",
          "data": "أخذت وزارة الداخلية والبلديات علما بتأسيس الجمعية المسماة"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "\""
        },
        {
          "type": "text",
          "data": "رابطة آل ذبيان في نيحا - الشوف\""
        },
        {
          "type": "text",
          "data": "مركزها: نيحا - طريق عام نيحا - جباع - ملك ذبيان نجيب ذبيان - قضاء الشوف"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "غايتها:  - خيرية - تعاونية تعمل لتحقيق التعاون والتآلف بين أفراد العائلة وشد أواصر المحبة وتقديم المساعدة المادية والمعنوية إلى من هم بحاجة إليها من أفراد العائلة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "إقامة ندوات اجتماعية وصحية وتربوية"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "إقامة دورات وندوات تربوية ونشاطات ترفيهية وتثقيفية من أجل تطوير التعليم"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "إقامة الحفلات والمهرجانات والمخيمات التثقيفية"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "على أن تطبق البنود المذكورة أعلاه وفقا للقوانين والأنظمة المرعية الإجراء وبعد موافقة المراجع المختصة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "المؤسسون السادة"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "الشيخ د. نابغ يوسف ذبيان"
        },
        {
          "type": "text",
          "data": "رياض ملحم ذبيان"
        },
        {
          "type": "text",
          "data": "انيس سعيد ذبيان"
        },
        {
          "type": "text",
          "data": "عادل حسين ذبيان"
        },
        {
          "type": "text",
          "data": "سليم سامي ذبيان"
        },
        {
          "type": "text",
          "data": "سامر رياض ذبيان"
        },
        {
          "type": "text",
          "data": "بشير انيس ذبيان"
        },
        {
          "type": "text",
          "data": "عباس كامل ذبيان"
        },
        {
          "type": "text",
          "data": "نسيم نايف ذبيان"
        },
        {
          "type": "text",
          "data": "ذبيان نجيب ذبيان"
        },
        {
          "type": "text",
          "data": "ممثل الجمعية تجاه الحكومة: السيد سامر رياض ذبيان"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "1",
      "content": [
        {
          "type": "text",
          "data": "على الهيئة التأسيسية استكمال اجراءات تأسيس الجمعية والدعوة الى انتخاب هيئة ادارية خلال مهلة سنة من تاريخ نشر العلم والخبر في الجريدة الرسمية"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "2",
      "content": [
        {
          "type": "text",
          "data": "على الجمعية المشار اليها ان تتقدم من وزارة الداخلية والبلديات في الشهر الاول من كل سنة بلائحة تتضمن اسماء اعضائها وبنسخة من موازنتها السنوية ومن حسابها القطعي السابق والا تعرضت لتطبيق احكام القانون المنشور بالمرسوم رقم 10830 تاريخ 9/10/1962 وتعديلاته"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "3",
      "content": [
        {
          "type": "text",
          "data": "يبلغ هذا العلم والخبر حيث تدعو الحاجة"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    }
  ],
