    {
      "number": "2 \r\nمادة 2:\r\nينشر هذا المرسوم ويبلغ حيث  تدعو الحاجة.",
      "content": [
        {
          "type": "text",
          "data": "مادة 1: يحدد دوام موظفي مراكز الحجر الصحي الزراعي والبيطري الذين"
        },
        {
          "type": "text",
          "data": "يعملون باستمرار ضمن اوقات  الدوام الرسمي وخارجه, وليلا في"
        },
        {
          "type": "text",
          "data": "المطار الدولي والمرفأ ومراكز الحدود علىالوجه التالي:"
        },
        {
          "type": "text",
          "data": "اسم المركز      عدد الموظفين       قبل الظهر      الدوام"
        },
        {
          "type": "text",
          "data": "بعد الظهر"
        },
        {
          "type": "text",
          "data": "ــــــــــــــــــــــــــــــــــــــــــــــــــــــــــ"
        },
        {
          "type": "text",
          "data": "المطار        2 زراعيان              7-13        13-19"
        },
        {
          "type": "text",
          "data": "المرفأ        2 زراعيان              7-13        14-17"
        },
        {
          "type": "text",
          "data": "المصنع        3 اثنان زراعيان        7-13        13-19"
        },
        {
          "type": "text",
          "data": "واحد بيطري"
        },
        {
          "type": "text",
          "data": "القاع         2 واحد زراعي           7-13        13-19"
        },
        {
          "type": "text",
          "data": "واحد بيطري"
        },
        {
          "type": "text",
          "data": "العبودية      2 واحد زراعي           7-13        13-19"
        },
        {
          "type": "text",
          "data": "واحد بيطري"
        },
        {
          "type": "text",
          "data": "العريضة       2 واحد زراعي           7-13        13-19"
        },
        {
          "type": "text",
          "data": "واحد بيطري"
        },
        {
          "type": "text",
          "data": "طرابلس        1 زراعي                8-14"
        },
        {
          "type": "text",
          "data": "اسم المركز     ليلا     مجموع الساعات       مجموع الساعات"
        },
        {
          "type": "text",
          "data": "الاضافية الليلية    الاضافية النهارية"
        },
        {
          "type": "text",
          "data": "ــــــــــــــــــــــــــــــــــــــــــــــــــــــــــ"
        },
        {
          "type": "text",
          "data": "المطار        20-23         3"
        },
        {
          "type": "text",
          "data": "المرفأ                      -                    3"
        },
        {
          "type": "text",
          "data": "المصنع        20-23         3"
        },
        {
          "type": "text",
          "data": "القاع         20-23         3"
        },
        {
          "type": "text",
          "data": "العبودية      20-23         3"
        },
        {
          "type": "text",
          "data": "العريضة       20-23         3"
        },
        {
          "type": "text",
          "data": "طرابلس          -"
        },
        {
          "type": "text",
          "data": "- يؤمن الدوام في جميع المراكز المشار اليها اعلاه قبل الظهر"
        },
        {
          "type": "text",
          "data": "وبعده بطريقة المناوبة بين الموظفين الاثنين كما يؤمن ايضا"
        },
        {
          "type": "text",
          "data": "بالمناوبة العمل الاضافي باستثناء مركزي المرفأ والمصنع."
        },
        {
          "type": "text",
          "data": "- يخضع للدوام الرسمي العادي في مركز المرفأ, جمبع موظفي"
        },
        {
          "type": "text",
          "data": "المركز, ويؤمن العمل الاضافي بعد الظهر بالمناوبة بين"
        },
        {
          "type": "text",
          "data": "الموظفين الاثنين."
        },
        {
          "type": "text",
          "data": "- يؤمن الدوام الرسمي في مركز المصنع قبل الظهر وبعده"
        },
        {
          "type": "text",
          "data": "بالمناوبة وعلى اساس  موظفين اثنين وموظف  واحد بعد الظهر,"
        },
        {
          "type": "text",
          "data": "ويؤمن العمل الاضافي الليلي بالمناوبة ما بين الموظفين"
        },
        {
          "type": "text",
          "data": "الثلاثة."
        },
        {
          "type": "text",
          "data": "- يؤمن العمل خلال ايام الاحاد والاعياد في جميع المراكز,"
        },
        {
          "type": "text",
          "data": "باستثناء مركز طرابلس  بالمناوبة ما بين موظفي كل مركز,"
        },
        {
          "type": "text",
          "data": "وعلى اساس  الدوام المحدد له."
        },
        {
          "type": "text",
          "data": "- ينظم رئيس  المصلحة المختصة في اول كل شهر المناوبة ما بين"
        },
        {
          "type": "text",
          "data": "موظفي المراكز التي يشرف  عليها."
        }
      ]
    },
    {
