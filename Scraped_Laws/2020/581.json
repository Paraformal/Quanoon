        {
          "type": "text",
          "data": "اخذت وزارة الداخلية"
        },
        {
          "type": "text",
          "data": "والبلديات علـما بتعديل مركز وغاية الجمعية الـمسماة"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "\""
        },
        {
          "type": "text",
          "data": "جمعية رام\" الحائزة على بيان العلـم والخبر رقم 665 تاريخ"
        },
        {
          "type": "text",
          "data": "29/5/2008"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "وأصبحت على النحو التالي"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "مركزها:  الضبيه ــ شارع كنيسة الصعود ــ العقار رقم 284/6"
        },
        {
          "type": "text",
          "data": "ــ بلوك"
        },
        {
          "type": "text",
          "data": "A"
        },
        {
          "type": "text",
          "data": "ــ شركة الأسمر العقارية ش.م.ل. ــ الطابق الأرضي ــ قضاء"
        },
        {
          "type": "text",
          "data": "الـمتن"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "بدلاً من"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "جبيل ــ شارع سيدة مارتين ــ ملك داغر"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "غايتها:  1 ــ جمع شمل أفراد الجمعية في أماكن إنتشارهم وتعزيز"
        },
        {
          "type": "text",
          "data": "الروابط والصلات بين جميع أفرادها"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "2"
        },
        {
          "type": "text",
          "data": "ــ الأنشطة الاجتماعية والثقافية والفكرية"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "3"
        },
        {
          "type": "text",
          "data": "ــ بث روح الـمحبة والتعاون بين اعضائها كافة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "4"
        },
        {
          "type": "text",
          "data": "ــ إحياء التراث الوطني والتاريخي لـمختلف العائلات اللبنانية"
        },
        {
          "type": "text",
          "data": "الـممثلة بالجمعية"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "5"
        },
        {
          "type": "text",
          "data": "ــ الإحاطة بتطورات حياة أفرادها في لبنان وبلدان الإنتشار"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "6"
        },
        {
          "type": "text",
          "data": "ــ تأمين الخدمات ومشغل للإكتفاء الذاتي لذوي الإحتياجات الخاصة"
        },
        {
          "type": "text",
          "data": "الجسدية"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "7"
        },
        {
          "type": "text",
          "data": "ــ إعتماد وتغطية الـمعينات التقنية الـموجـهة للأشخاص ذوي"
        },
        {
          "type": "text",
          "data": "الإحتياجات الخاصة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "8"
        },
        {
          "type": "text",
          "data": "ــ تأمين الـمعينات للأشخاص ذوي الإحتياجات الخاصة حركياً"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "9"
        },
        {
          "type": "text",
          "data": "ــ تأمين الـمواصلات ونقل ذوي الإحتياجات الخاصة للـمشاركة"
        },
        {
          "type": "text",
          "data": "بالنشاطات الخاصة بهم"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "10"
        },
        {
          "type": "text",
          "data": "ــ تأمين دورات تأهيلية ونفسية للـمساجين الـمحررين تساعدهم"
        },
        {
          "type": "text",
          "data": "على معادوة الإنخراط في الـمجتمع"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "11"
        },
        {
          "type": "text",
          "data": "ــ تأمين دورات متخصصة للتعليم والتدريب الـمهني والتقني"
        },
        {
          "type": "text",
          "data": "لذوي الإحتياجات الخاصة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "12"
        },
        {
          "type": "text",
          "data": "ــ تعمل الجمعية على خدمة العائلات الـمحتاجة"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "13"
        },
        {
          "type": "text",
          "data": "ــ العمل على تأهيل وتمكين الجرحى والـمصابين باحداث عنفية"
        },
        {
          "type": "text",
          "data": "إجتماعياً وإقتصادياً"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "14"
        },
        {
          "type": "text",
          "data": "ــ تحقيق الـمواطنة اللبنانية الكاملة على أساس الـمساواة"
        },
        {
          "type": "text",
          "data": "بين الرجل والـمرأة في الحقوق والواجبات وفي فرض الحماية الصحية وخصوصاً"
        },
        {
          "type": "text",
          "data": "الإنجابية، وفي مختلف مواقع صنع القرار"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "15"
        },
        {
          "type": "text",
          "data": "ــ تأمين دورات تأهيلية لتمكين الـمرأة نفسياً وإجتماعياً"
        },
        {
          "type": "text",
          "data": "وثقافياً ومعيشياً"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "16"
        },
        {
          "type": "text",
          "data": "ــ تأهيل الـمرأة للإنخراط بالشأن العام ودعمها والعمل على"
        },
        {
          "type": "text",
          "data": "تحديث القوانين وإلغاء تلك الـمجحفة في حقها"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "على أن تطبق البنود الـمذكورة أعلاه وفقا للقوانين والأنظمة"
        },
        {
          "type": "text",
          "data": "الـمرعية الإحراء وبعد موافقة الـمراجع الـمختصة"
        },
        {
