    {
      "number": "1",
      "content": [
        {
          "type": "text",
          "data": "إستحدثت في الـمناطق التالية وظائف كتاب عدل جديدة وحدد نطاق"
        },
        {
          "type": "text",
          "data": "صلاحيتها وفقاً لـما يلي"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "ــ وظيفة كاتب عدل في منطقة  غزير  في قضاء كسروان تشمل"
        },
        {
          "type": "text",
          "data": "صلاحيتها نطاق البلدية"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ــ وظيفة كاتب عدل في منطقة  الحيصا  في عكار"
        },
        {
          "type": "text",
          "data": "تشمل صلاحيتها القرى والبلدات التالية: الحيصا ــ العريضة ــ السماقية ــ"
        },
        {
          "type": "text",
          "data": "حكر الضاهري ــ الـمسعودية ــ تل معيان ــ بلانة الحيصا ــ القليعات ــ الكنيسة"
        },
        {
          "type": "text",
          "data": "ــ تلبـيـبة ــ الشيخ زناد ــ السمونية ــ الـمحمودية ــ العبودية ــ الشيخ"
        },
        {
          "type": "text",
          "data": "عياش ــ تلقـندي ــ تلبيرة ــ تلعباس الشرقي ــ سعدين ــ دارين ــ حكر جانين"
        },
        {
          "type": "text",
          "data": "ــ جانين ــ شير حميرين ــ سرار ــ الغزيلة ــ برشا ــ الخرنوبة ــ العرمة"
        },
        {
          "type": "text",
          "data": "ــ ضهر القنبر"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ــ وظيفة كاتب عدل في منطقة  العيون  في عكار تشمل صلاحيتها"
        },
        {
          "type": "text",
          "data": "القرى والبلدات التالية: ــ بـينو ــ قبولا ــ الشطاحة ــ بيت ملات ــ بيت"
        },
        {
          "type": "text",
          "data": "داوود ــ البرج ــ بزبـينا ــ عين يعقوب ــ تكريت ــ رحبة ــ جبرايل ــ عيات"
        },
        {
          "type": "text",
          "data": "ــ الشقدوف ــ ضهر الليسينة ــ الدورة ــ ممنع ــ تاشع ــ عكار العتيقة ــ"
        },
        {
          "type": "text",
          "data": "تلة ــ دير عوزا ــ إيلات"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ــ وظيفة كاتب عدل في منطقة  حرار  في عكار تشمل صلاحيتها"
        },
        {
          "type": "text",
          "data": "القرى والبلدات التالية: حرار ــ مشمش ــ فنيدق ــ القرنة ــ بيت ايوب ــ"
        },
        {
          "type": "text",
          "data": "بيت يونس ــ القريات ــ الحويش ــ خريبة الجرد ــ شان ــ قبعيت ــ حبشيت"
        },
        {
          "type": "text",
          "data": "ــ صدقة ــ القموعة ــ دنبو"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ــ وظيفة كاتب عدل في منطقة  القرعون  في البقاع الغربي"
        },
        {
          "type": "text",
          "data": "تشمل صلاحيتها القرى والبلدات التالية: القرعون ــ لالا ــ بعلول ــ البيرة"
        },
        {
          "type": "text",
          "data": "ــ الرفيد ــ محيدثة ــ مجدل بلحيص"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ــ وظيفة كاتب عدل في منطقة  بدنايل  في قضاء بعلبك تشمل"
        },
        {
          "type": "text",
          "data": "صلاحيتها القرى والبلدات التالية: بدنايل ــ بيت شاما ــ العقيدية ــ حوش\nالرافقة ــ قصرنبا ــ تمنين التحتا ــ تمنين الفوقا"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "2",
      "content": [
        {
          "type": "text",
          "data": "عدلت صلاحية وظيفة كاتب العدل في دائرتي"
        },
        {
          "type": "text",
          "data": "دير الأحمر والنبي شيت في قضاء بعلبك وفقاً لـما يلي"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "ــ دائرة دير الأحمر تشمل صلاحيتها القرى والبلدات التالية"
        },
        {
          "type": "text",
          "data": ":"
        },
        {
          "type": "text",
          "data": "دير الاحمر ــ بشوات ــ عيناتا ــ برقا ــ بتدعي ــ بوداي ــ شليفا ــ يمونه"
        },
        {
          "type": "text",
          "data": "ــ دار الواسعة ــ كنيسة ــ السعيدة القدام ــ العلاق ــ بيت ابو صليـبي"
        },
        {
          "type": "text",
          "data": "."
        },
        {
          "type": "text",
          "data": "ــ دائرة النبي شيت تشمل صلاحيتها القرى والبلدات التالية: النبي"
        },
        {
          "type": "text",
          "data": "شيت ــ سرعين التحتا سرعين الفوقا ــ الخضر ــ حام ــ معربون ــ حورتعلا\nــ طليا ــ طفيل ــ طيـبة ــ الحلانية ــ الانصار ــ خريبة ــ جنـتا ــ النبي\nسباط"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "3",
      "content": [
        {
          "type": "text",
          "data": "تلغى حكماً صلاحية كتاب العدل العاملين"
        },
        {
          "type": "text",
          "data": "في الـمناطق التي إستحدثت فيها وظائف كتاب عدل جديدة بموجب هذا الـمرسوم\nمن دون الحاجة الى إستصدار مرسوم بشأنها، وذلك إعتباراً من تاريخ ملء تلك\nالوظائف الجديدة"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "4",
      "content": [
        {
          "type": "text",
          "data": "عملاً بالـمراسيم السابقة والـمرسوم الحاضر"
        },
        {
          "type": "text",
          "data": "يصبح مجموع وظائف كتاب العدل في الـمحافظات كافة على النحو التالي"
