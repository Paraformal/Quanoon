    "oj_publish_date": "14/05/2020",
    "oj_page": "1180-1181"
  },
  "preamble": "أقر مجلس النواب،\nوينشر رئيس الجمهورية القانون التالي نصه\n:",
  "articles": [
    {
      "number": "4 يعمل بهذا القانون فور نشره في الجريدة الرسمية.",
      "content": [
        {
          "type": "text",
          "data": "يفتح اعتماد إضافي في الـموازنة العامة"
        },
        {
          "type": "text",
          "data": "لعام 2020 بقيمة /450/ مليار ليرة لبنانية، وذلك وفقاً للتنسيب التالي:"
        },
        {
          "type": "text",
          "data": "قسم النفقات"
        },
        {
          "type": "text",
          "data": "الجزء 1 ــ الأول"
        },
        {
          "type": "text",
          "data": "الباب 12 ــ وزارة الصحة العامة"
        },
        {
          "type": "text",
          "data": "الفصل 1 ــ مديرية الصحة العامة"
        },
        {
          "type": "text",
          "data": "الوظيفة 732 ــ الخدمات العامة الخاصة بالاستشفاء الخاص"
        },
        {
          "type": "text",
          "data": "البند 16 ــ نفقات مختلفة"
        },
        {
          "type": "text",
          "data": "الفقرة 7 ــ نفقات استشفاء"
        },
        {
          "type": "text",
          "data": "النبذة 1 ــ نفقات استشفاء"
        },
        {
          "type": "text",
          "data": "نفقات استشفاء في القطاعين العام والخاص"
        },
        {
          "type": "text",
          "data": "/450.000.000.000/"
        },
        {
          "type": "text",
          "data": "ل.ل. (فقط أربعماية وخمسون مليار ليرة لبنانية)."
        },
        {
          "type": "text",
          "data": "لتسديد جزء من الـمصالحات الـمدققة الـمترتبة لصالح الـمستشفيات"
        },
        {
          "type": "text",
          "data": "نتيجة تجاوز الـموازنات الـمخصصة لها لغاية العام 2019."
        }
      ]
    },
    {
      "number": "1",
      "content": [
        {
          "type": "text",
          "data": "لا يجوز استعمال هذا الاعتماد سوى للغاية"
        },
        {
          "type": "text",
          "data": "الـمنصوص عليها بموجب الـمادة الأولى من هذا القانون، وتتم جدولة الدفع بقرار\nمن مجلس الوزراء"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    },
    {
      "number": "2",
      "content": [
        {
          "type": "text",
          "data": "يغطّى الاعتماد الـمفتوح بموجب الـمادة"
        },
        {
          "type": "text",
          "data": "الأولى من هذا القانون بزيادة تقدير واردات موازنة العام 2020 وفقاً للتنسيب"
        },
        {
          "type": "text",
          "data": "التالي:"
        },
        {
          "type": "text",
          "data": "قسم الواردات:"
        },
        {
          "type": "text",
          "data": "الجزء 2 ــ الواردات الاستثنائية"
        },
        {
          "type": "text",
          "data": "الباب 5 ــ القروض"
        },
        {
          "type": "text",
          "data": "الفصل 56 ــ القروض الداخلية"
        },
        {
          "type": "text",
          "data": "البند 561 ــ سندات خزينة داخلية"
        },
        {
          "type": "text",
          "data": "الفقرة 56101 ــ القروض الداخلية"
        },
        {
          "type": "text",
          "data": "/450.000.000.000/ ل.ل (فقط أربعماية وخمسون مليار ليرة لبنانية)."
        }
      ]
    },
    {
      "number": "3",
      "content": [
        {
          "type": "text",
          "data": "يعمل بهذا القانون فور نشره في الجريدة"
        },
        {
          "type": "text",
          "data": "الرسمية"
        },
        {
          "type": "text",
          "data": "."
        }
      ]
    }
  ],
