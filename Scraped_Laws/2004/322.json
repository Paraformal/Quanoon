  },
  "preamble": "ان وزير الزراعة,\nبناء على المرسوم رقم 10057 تاريخ 17/04/2003 (تشكيل الحكومة),\nبناء على المرسوم الاشتراعي رقم 97/83 وتعديلاته (دمج مؤسسات عامة بوزارة الزراعة),\nبناء على المرسوم رقم 5246 تاريخ 20/06/1994 (تنظيم وزارة الزراعة وتحديد ملاكها...),\nبناء على القانون الصادر بمرسوم اشتراعي رقم 31 تاريخ 18/01/1955 (تحديد مهام وزارة الزراعة),\nبناء على مطالعة مديرية الثروة الزراعية,\nبناء على اقتراح مدير عام الزراعة,\nيقرر ما يأتي:",
  "articles": [
    {
      "number": "4 ينشر هذا القرار ويبلغ لمن يلزم.",
      "content": [
        {
          "type": "text",
          "data": "تعتمد نسب الافلاتوكسين Aflatoxins في بعض المواد الغذائية المستوردة حسب الجدول التالي:"
        },
        {
          "type": "text",
          "data": "المنتج                      النسبة بالميكروغرام/كلغ"
        },
        {
          "type": "text",
          "data": "M1  B1+B2+G1+G2     BI"
        },
        {
          "type": "text",
          "data": "الفول السوداني, الجوز, اللوز 2          4"
        },
        {
          "type": "text",
          "data": "البندق, الكاجو, الفستق الحلبي"
        },
        {
          "type": "text",
          "data": "البزورات, الفواكه المجففة"
        },
        {
          "type": "text",
          "data": "والمواد الصنعة المعدة"
        },
        {
          "type": "text",
          "data": "للاستهلاك البشري المباشر"
        },
        {
          "type": "text",
          "data": "او كمكون من مكونات الطعام"
        },
        {
          "type": "text",
          "data": "الحبوب (قمح, ارز, شعير,      2          4"
        },
        {
          "type": "text",
          "data": "شوفان...) على انواعها والذرة"
        },
        {
          "type": "text",
          "data": "ومنتجاتها المصنعة المعدة"
        },
        {
          "type": "text",
          "data": "للاستهلاك البشري او كمكون"
        },
        {
          "type": "text",
          "data": "من مكونات الطعام"
        },
        {
          "type": "text",
          "data": "الحليب (الحليب الطازج,"
        },
        {
          "type": "text",
          "data": "الحليب المعد لصنع المنتجات"
        },
        {
          "type": "text",
          "data": "التي يدخل الحليب فيها كمكون"
        },
        {
          "type": "text",
          "data": "اساسي والحليب المعالج بالحرارة)                  0.05"
        },
        {
          "type": "text",
          "data": "الاعلاف ومكونات الاعلاف"
        },
        {
          "type": "text",
          "data": "بمختلف اصنافها وانواعها بما"
        },
        {
          "type": "text",
          "data": "فيها الذرة                              20"
        },
        {
          "type": "text",
          "data": "الفول السوداني الذي سيخضع    8          15"
        },
        {
          "type": "text",
          "data": "للفرز او طرق المعالجة الفيزيائية للاخرى قبل الاستهلاك البشري او الاستعمال كمكون غذائي"
        },
        {
          "type": "text",
          "data": "الجوز, اللوز, البندق,        5          10"
        },
        {
          "type": "text",
          "data": "الكاجو, الفستق الحلبي,"
        },
        {
          "type": "text",
          "data": "والفواكه المجففة التي ستخضع للفرز او احدى الطرق المعالجة الفيزيائية قبل الاستهلاك"
        },
        {
          "type": "text",
          "data": "البشري او الاستعمال كمكون غذائي"
        }
      ]
    },
    {
      "number": "1",
      "content": [
        {
          "type": "text",
          "data": "تخضع كل ارسالية للفحص المخبري للتأكد من نسبة الافلاتوكسين في المنتج وترفض حال تجاوزت النسب المشار إليها في المادة الأولى من هذا القرار."
        }
      ]
    },
    {
      "number": "2",
      "content": [
        {
          "type": "text",
          "data": "يلغى كل نص يتعارض ومضمون هذا القرار."
        }
      ]
    },
    {
      "number": "3",
      "content": [
        {
          "type": "text",
          "data": "ينشر هذا القرار ويبلغ لمن يلزم."
        }
      ]
    }
  ],
  "signature": "بيروت في 13/10/2004\nوزير الزراعة\nعلي حسن خليل"
}